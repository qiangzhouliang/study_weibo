    </view>
    
    <view class="weibo-handle">
      <view class="comment-group">
        <image src="../../images/comment.png"/>
        评论
      </view>
      <view class="praise-group">
        <image src="../../images/praise.png"/>
        赞
      </view>
    </view>
  </view>

