        <view class="username">鸿鹄</view>
        <view class="detail-info">
          <view class="time">2019-1-1 12:12:00</view>
          <view class="form">来自 Android10</view>
        </view>
      </view>
    </view>
    <!-- 微博内容 -->
    <view class="weibo-content-group">
      <view class="content">大家快来学习小程序</view>
