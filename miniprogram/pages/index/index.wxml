<view class="container">
  <!-- 一张图片 -->
  <view class="weibo-group">
    <!-- 用户信息 -->
    <view class="user-group">
      <image class="avatar" src="https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1600514632595&di=3aaca810bb5b156901f6b9a4456f50a8&imgtype=0&src=http%3A%2F%2Fn.sinaimg.cn%2Fsinacn11%2F600%2Fw700h700%2F20180424%2F514b-fzqvvsa3694420.jpg"></image>
